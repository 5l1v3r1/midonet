#!/bin/sh

# Midokura
POST_DIR=/var/lib/dpkg/info

case "$1" in
    remove)
        if initctl status midolman | grep running > /dev/null ; then
            initctl stop midolman 2>/dev/null >/dev/null
        fi
        ;;
esac

# remove dangling symlinks
MIDOLMAN_JAR_DIR=`cat $POST_DIR/midolman.list | grep midolman-\[^/\]*\.jar | xargs dirname`
if [ -d "$MIDOLMAN_JAR_DIR" ] ; then
    rm "$MIDOLMAN_JAR_DIR/midolman.jar"
    rm "$MIDOLMAN_JAR_DIR/midonet-jdk-bootstrap.jar"
fi
