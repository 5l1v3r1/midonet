#!/bin/sh

NAME="midolman"
GROUP="midokura"
USER="midolman"
DATADIR=/var/lib/midolman
POST_DIR=/var/lib/dpkg/info

# shamelessly copied from debian mysql-server package...
if ! getent group $GROUP >/dev/null ; then
        # Adding system group
        addgroup --system $GROUP >/dev/null
fi

# creating midonet user if it isn't already there
if ! getent passwd $USER >/dev/null ; then
        # Adding system user
        adduser \
          --system \
          --disabled-login \
          --ingroup $GROUP \
          --home $DATADIR \
          --gecos "MidoNet" \
          --shell /bin/false \
          $USER  >/dev/null
fi

install -d -o $USER -g $GROUP /var/log/$NAME $DATADIR

# allow group access to /var/run/quagga
usermod -G quagga $USER

# make a symlink for the package
MIDOLMAN_JAR=`cat $POST_DIR/midolman.list | grep midolman-\[^/\]*\.jar`
MIDOLMAN_JAR_DIR=`cat $POST_DIR/midolman.list | grep midolman-\[^/\]*\.jar | xargs dirname`
if [ ! -d "$MIDOLMAN_JAR_DIR" ] ; then
    echo "did not find jar installation dir" >&2
    exit 1
fi
if [ ! -f "$MIDOLMAN_JAR" ] ; then
    echo "did not find midolman.jar" >&2
    exit 1
fi

ln -sf $MIDOLMAN_JAR "$MIDOLMAN_JAR_DIR/midolman.jar"
ln -sf $MIDOLMAN_JAR "$MIDOLMAN_JAR_DIR/midolmanj.jar"
ln -sf `cat $POST_DIR/midolman.list | grep midokura-jdk-bootstrap.*\.jar` "$MIDOLMAN_JAR_DIR/midokura-jdk-bootstrap.jar"

test -e /etc/init.d/midolman || ln -s /lib/init/upstart-job /etc/init.d/midolman
