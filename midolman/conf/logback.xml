<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!--
        DuplicateMessageFilter detects duplicate messages, and beyond
        a certain number of repetitions (5, by default), drops repeated
        messages. This protectively prevents an accidental surge of
        repeated messages from flooding system resources.

        Note: In contrast to syslog, it does NOT log the fact that
        it dropped messages, say, "last message repeated 4 times".

        For further details, see the section for DuplicateMessageFilter
        in http://logback.qos.ch/manual/filters.html
    -->
    <turboFilter class="ch.qos.logback.classic.turbo.DuplicateMessageFilter"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy.MM.dd HH:mm:ss.SSS} %-5level [%X{sourceThread}] %logger{0} - %X{akkaSource} %m%n%rEx </pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${midolman.log.dir}midolman.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy.MM.dd HH:mm:ss.SSS} %-5level [%X{sourceThread}] %logger{0} - %X{akkaSource} %m%n%rEx </pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${midolman.log.dir}midolman.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
        </rollingPolicy>

    </appender>

    <!-- Fine grained settings for specific classes -->
    <logger name="org.apache.zookeeper" level="INFO" />
    <logger name="org.apache.cassandra" level="INFO" />
    <logger name="me.prettyprint.cassandra" level="INFO" />
    <logger name="org.midonet.midolman.NetlinkCallbackDispatcher" level="INFO" />
    <logger name="org.eclipse.jetty.util.Scanner" level="INFO" />

    <root level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>
