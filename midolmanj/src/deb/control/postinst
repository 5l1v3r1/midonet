#!/bin/sh

NAME="midolman"
GROUP="midokura"
USER="midolman"
DATADIR=/var/lib/midolman
POST_DIR=/var/lib/dpkg/info

# shamelessly copied from debian mysql-server package...
if ! getent group $GROUP >/dev/null ; then
        # Adding system group
        addgroup --system $GROUP >/dev/null
fi

# creating midonet user if it isn't already there
if ! getent passwd $USER >/dev/null ; then
        # Adding system user
        adduser \
          --system \
          --disabled-login \
          --ingroup $GROUP \
          --home $DATADIR \
          --gecos "MidoNet" \
          --shell /bin/false \
          $USER  >/dev/null
fi

install -d -o $USER -g $GROUP /var/log/$NAME $DATADIR

# allow group access to /var/run/quagga
usermod -G quagga $USER

# make a symlink for the package
MIDOLMAN_JAR_DIR=`cat $POST_DIR/midolmanj.list  | grep midolmanj.*\.jar | awk -F'/' '{if (NF <= 1) printf "."; else {OFS="/"; $NF=""; printf "%s", substr($0, 1, length($0) - 1);}}'`

ln -sf `cat $POST_DIR/midolmanj.list | grep midolmanj.*\.jar` "$MIDOLMAN_JAR_DIR/midolmanj.jar"
ln -sf `cat $POST_DIR/midolmanj.list | grep midokura-jdk-bootstrap.*\.jar` "$MIDOLMAN_JAR_DIR/midokura-jdk-bootstrap.jar"

test -e /etc/init.d/midolman || ln -s /lib/init/upstart-job /etc/init.d/midolman
